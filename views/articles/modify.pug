extends ../layout/default
block content
    .container
        form(method="POST" action=`/articles/${article.id}`)
            .form-group
                label(for='title') Title
                input#title.form-control(type='text' aria-describedby='titleHelp' name='title' value=article.title)
                small#titleHelp.form-text.text-muted Your article title

            .form-group
                label(for='body') Article content
                textarea#body.form-control(rows='10' name='body')= article.title

            .form-row.justify-content-end
                .col-auto
                    button.btn.btn-secondary(type='submit' name='action' value='cancel') cancel
                .col-auto
                    button.btn.btn-primary(type='submit' name='action' value='save') Save
