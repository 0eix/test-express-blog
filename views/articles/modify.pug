extends ../layout/default
block content
    .container
        form(method="PUT" action=`/articles/${article.id}`)
            .form-group
                label(for='title') Title
                input#title.form-control(type='text' aria-describedby='titleHelp' name='title' value=article.title)
                small#titleHelp.form-text.text-muted Your article title

            .form-group
                label(for='body') Article content
                textarea#body.form-control(rows='10' name='body')= article.body

            .form-row.justify-content-end
                .col-auto
                    a.btn.btn-secondary(href=`/articles/${article.id}/cancel`) cancel
                .col-auto
                    button.btn.btn-primary(type='submit') Save
